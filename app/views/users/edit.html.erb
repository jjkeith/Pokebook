<%= render 'partials/navbar' %>

<div class="container">

<div class="row">
  <h1 class='center'>Update your profile</h1>
<div class="spacer"></div>

  <div class="row">
    <div class="col-md-3">
      <% provide(:title, "Edit user") %>
      <%= form_for @user, url: edit_user_path do |f| %>
      <!-- ruby image_tag @user.avatar.url(:medium) %> -->
      <!-- <div class="form-group">
          ruby f.label :avatar, 'Update profile pic*', class: 'control-label' %>
          ruby f.file_field :avatar  %>
      </div> -->
    </div>

    <div class="col-md-6 col-md-offset-2">
        <%= f.label :username %>
        <%= f.text_field :username, class: 'form-control' %>

        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>

        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control' %>

        <%= f.label :password_confirmation, "Confirmation" %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>
    </div>
  </div>
<div class="spacer"></div>
  <div class="row">
    <div class="col-md-4 col-md-offset-5">
      <%= f.submit "Save changes", class: "btn btn-pokemon" %>
    </div>
    <div class="col-md-3">
      <%= link_to "Delete profile", destroy_user_path, class: "btn btn-danger", method: :delete, data: {confirm: "Are you sure? Deletion is permanent."} %>
    </div>
  </div>

</div>
<% end %>
