<%= render 'partials/navbar' %>

<h1 class = "center bold">Upload a New Pok√©mon</h1>

<%= form_for @card do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name %>

  <%= f.label :imageUrl %>
  <%= f.text_field :imageUrl %>

	<div class="form-group">
			<div class="col-md-8 col-md-offset-4">
					<%= submit_tag 'Log in', class: 'btn btn-pokemon' %>

			</div>
	</div>


<% end %>


<%= form_tag sessions_path,{:class => 'form-horizontal'} do %>

    <fieldset>
	    <div class="form-group">
	        <%= label_tag :email, 'Email', class: 'col-md-4 control-label' %>
		    <div class="col-md-5">
		        <%= text_field_tag :email, params[:email], class: 'form-control' %>
		    </div>
	    </div>
	    <div class="form-group">
	        <%= label_tag :password, 'Password', class: 'col-md-4 control-label' %>
		    <div class="col-md-5">
		        <%= password_field_tag :password, nil, class: 'form-control' %>
		    </div>
	    </div>
	    <div class="form-group">
	        <div class="col-md-8 col-md-offset-4">
	            <%= submit_tag 'Log in', class: 'btn btn-pokemon' %>
		        <%= link_to "Don't have an account?", new_user_path, class: 'btn btn-pokemon' %>
	        </div>
	    </div>
    </fieldset>
<% end %>
