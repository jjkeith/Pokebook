
			<%= render 'partials/navbar' %>

			<div class="container">

			<div class="row">
			  <h1 class='center bold'>Upload Pokémon</h1>
			    <div class="spacer"></div>
			  <div class="row">
			    <div class="col-md-3">
			      <% provide(:title, "Add Another Pokémon") %>
			      <%= form_for @card, url: '/cards/', html: { multipart: true } do |f| %>
			    </div>

			    <div class="col-md-6">
			        <%= f.label :name %>
			        <%= f.text_field :name, class: 'form-control' %>
						<div class="spacer"></div>
			        <%= f.label "Image URL"%>
			        <%= f.text_field :imageUrl, class: 'form-control' %>
							<a href = http://bulbapedia.bulbagarden.net/wiki/Main_Page>Please retrieve the image URL from Bulbapedia.</a>
			    </div>
			  </div>
			<div class="spacer"></div>
			  <div class="row">
			    <div class="col-md-4 col-md-offset-3">
			      <%= f.submit 'Submit', class: 'btn btn-pokemon' %>
			    </div>
			  </div>

			</div>
		</div>
			<% end %>
