<!-- display the user's cards -->
<%= render 'partials/navbar' %>

<div class="container">

  <h1 class = "center bold" >Edit Your Favorites</h1>
  <div class="spacer"></div>

<% current_user.cards.order(:name).in_groups_of(6, false).each do |group| %>

  <div class='row'>
    <% group.each do |c| %>
      <div class='col-md-2'>
        <div class="thumbnail center">
          <%= link_to card_path(c) do %>
            <%= image_tag(c.imageUrl, :class => "card") %>
          <% end %>
          <h4 class='bold'><%= c.name %></h4>
          <%= link_to "View", card_path(c) %> |
          <%= link_to 'Remove', "/cards/#{c.id}/destroy" %>
      </div>
    </div>
    <% end %>
  </div>
<% end %>
</div>
