<%= render 'partials/navbar' %>

<div class="container">

<div class="row">
  <% provide(:title, "Edit user") %>
    <div class="col-md-6 col-md-offset-3">
      <h1>Update your profile</h1>
    </div>
  </div>

  <div class="row">
    <div class="col-md-3">
      <%= form_for @user, url: edit_user_path do |f| %>
      <%= image_tag @user.avatar.url(:medium) %>
      <div class="form-group">
          <%= f.label :avatar, 'Update profile pic*', class: 'control-label' %>
          <%= f.file_field :avatar  %>
      </div>
    </div>

    <div class="col-md-6">
        <%= f.label :username %>
        <%= f.text_field :username, class: 'form-control' %>

        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>

        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control' %>

        <%= f.label :password_confirmation, "Confirmation" %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>
    </div>
  </div>
<div class="spacer"></div>
  <div class="row">
    <div class="col-md-4 col-md-offset-3">
      <%= f.submit "Save changes", class: "btn btn-pokemon" %>
    </div>
    <div class="col-md-3">
      <%= link_to "Delete profile", destroy_user_path, class: "btn btn-danger", method: :delete, data: {confirm: "Are you sure? Deletion is permanent."} %>
    </div>
  </div>

</div>
<% end %>
