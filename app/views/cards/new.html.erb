<%= render 'partials/navbar' %>

<div class="container">

	<div class="row">
	  <h1 class='center bold'>Upload Pokémon</h1>
	    <div class="spacer"></div>
	  <div class="row">
	    <div class="col-md-3">
	      <% provide(:title, "Upload Pokémon") %>

	      <%= form_for @card, url: '/cards/', html: { multipart: true } do |f| %>
				<% if @card.errors.any? %>
			    <div class=' alert alert-danger'>
						<script>
							$(".alert").delay(3000).slideUp()
						</script>
			      <h4 class = 'bold error'><%= pluralize(@card.errors.count, "error") %> prohibited this card from being saved:</h4>
			      <ul>
			      <% @card.errors.full_messages.each do |message| %>
			        <li><p class = 'error'><%= message %></p></li>
			      <% end %>
			      </ul>
			    </div>
			  <% end %>
	    </div>

	    <div class="col-md-6">
	        <%= f.label :name %>
	        <%= f.text_field :name, class: 'form-control' %>
				<div class="spacer"></div>
	        <%= f.label "Image URL"%>
	        <%= f.text_field :imageUrl, class: 'form-control' %>
					<a href="http://bulbapedia.bulbagarden.net/wiki/List_of_Pok%C3%A9mon_by_name" target="_blank">Please retrieve the image URL from Bulbapedia.</a>
	    </div>
	  </div>
	<div class="spacer"></div>
	  <div class="row">
	    <div class="col-md-4 col-md-offset-3">
	      <%= f.submit 'Submit', class: 'btn btn-pokemon' %>
	    </div>
	  </div>

	</div>
</div>
	<% end %>
