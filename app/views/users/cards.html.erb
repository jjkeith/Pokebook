<!-- display the user's favorite cards -->
<%= render 'partials/navbar' %>

<div class="container">

  <h1 class = "center bold" >Your Favorites</h1>
  <div class="spacer"></div>

<% current_user.cards.in_groups_of(4, false).each do |group| %>
  <div class='row'>
    <% group.each do |c| %>
      <div class='col-md-3'>
        <div class="thumbnail center">
          <%= image_tag(c.imageUrl, :class => "card") %>
          <h4 class='bold'><%= c.name %></h4>
      </div>
    </div>
    <% end %>
  </div>
<% end %>
